{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node16",
    "outDir": "./dist"
  },
  "include": ["."],
  "exclude": ["**/dist", "**/node_modules", "**/*.spec.ts", "**/__snapshots__"]
}
