{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2018"],
    "outDir": "./dist"
  },
  "include": ["./src", ".d.ts"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
